---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <!-- Homepage -->
  <url>
    <loc>https://kevstemplates.com/</loc>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Main navigation pages -->
  {% for item in site.data.navigation %}
  <url>
    <loc>https://kevstemplates.com{{ item.link }}</loc>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  {% endfor %}

  <!-- All pages from the pages collection -->
  {% for page in site.pages %}
  {% unless page.url contains '/404' or page.url contains '.xml' or page.url contains '.css' or page.url contains '.js' %}
  {% if page.url %}
  <url>
    <loc>https://kevstemplates.com{{ page.url | remove: '.html' }}</loc>
    {% if page.last_modified_at %}
    <lastmod>{{ page.last_modified_at | date: '%Y-%m-%d' }}</lastmod>
    {% endif %}
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  {% endif %}
  {% endunless %}
  {% endfor %}

  <!-- All pages from the custom pages collection -->
  {% for page in site.pages %}
  {% if page.url and page.url != '/' %}
  {% unless page.url contains '/404' or page.url contains '.xml' %}
  <url>
    <loc>https://kevstemplates.com{{ page.url | remove: '.html' }}</loc>
    {% if page.date %}
    <lastmod>{{ page.date | date: '%Y-%m-%d' }}</lastmod>
    {% endif %}
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
  {% endunless %}
  {% endif %}
  {% endfor %}

  <!-- Templates collection -->
  {% for template in site.templates %}
  <url>
    <loc>https://kevstemplates.com{{ template.url | remove: '.html' }}</loc>
    {% if template.date %}
    <lastmod>{{ template.date | date: '%Y-%m-%d' }}</lastmod>
    {% endif %}
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>
  {% endfor %}
</urlset>
